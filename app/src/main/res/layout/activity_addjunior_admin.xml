<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Admin">

    <Button
        android:id="@+id/nameOfAdmin"
        android:layout_width="329dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/custom_button"
        android:text="@string/name_of_admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nameOfCompany"
        android:layout_width="329dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_button"
        android:text="@string/name_of_company"
        app:layout_constraintEnd_toEndOf="@+id/nameOfAdmin"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/nameOfAdmin"
        app:layout_constraintTop_toBottomOf="@+id/nameOfAdmin" />

</androidx.constraintlayout.widget.ConstraintLayout>